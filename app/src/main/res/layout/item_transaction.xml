<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transaction_row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_theme_onPrimary"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/transaction_list_item_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:minHeight="64dp">

        <ImageView
            android:id="@+id/transaction_list_item_avatar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="16dp"
            android:scrollbarSize="4dp"
            app:srcCompat="@drawable/baseline_attach_money_24"
            android:contentDescription="@string/first_image_of_tip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/transaction_list_item_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transaction_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingTop="17dp"
                android:text="1.700.000 VND"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="@color/md_theme_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/transaction_list_item_short_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="10/11/2023"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/md_theme_onSurface" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
