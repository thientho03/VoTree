<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_theme_onPrimary"
    android:id="@+id/reporterDetail">

    <FrameLayout
        android:id="@+id/acountDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_theme_surfaceDim"
            android:orientation="vertical"
            tools:context=".admin.activities.AdminMainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@color/md_theme_primary" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circular_border_solid"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginTop="10dp"-->
<!--                            android:text="Store Information"-->
<!--                            android:textColor="@color/md_theme_scrim"-->
<!--                            android:textSize="21sp" />-->

                        <com.google.android.material.imageview.ShapeableImageView
                            app:shapeAppearanceOverlay="@style/circle_overlay"
                            android:id="@+id/store_avatar"
                            android:scaleType="centerCrop"
                            android:layout_width="94dp"
                            android:layout_height="94dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/store_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Store Name"
                                android:textColor="@color/md_theme_primary"
                                android:textSize="21sp"
                                android:textStyle="bold" />

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/circular_grey_bordersolid"
                                    android:padding="10dp"
                                    android:src="@drawable/baseline_create_24" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Created On:"
                                        android:textSize="12sp"
                                        android:textColor="@color/md_theme_secondary"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/account_created_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="12/12/2024"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/circular_grey_bordersolid"
                                    android:padding="10dp"
                                    android:src="@drawable/baseline_sync_24" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Updated On"
                                        android:textSize="12sp"
                                        android:textColor="@color/md_theme_secondary"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/account_updated_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="12/12/2024"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <!--Option Bar-->

                    <LinearLayout
                        android:id="@+id/tripple_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/circular_border_solid"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/listTipButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:padding="13dp"
                            android:text="Tip"
                            android:textAllCaps="true"
                            android:textColor="@color/md_theme_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/md_theme_primary" />

                        <TextView
                            android:id="@+id/viewTransactionButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:padding="13dp"
                            android:text="Transaction"
                            android:textAllCaps="true"
                            android:textColor="@color/md_theme_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/md_theme_primary" />

                        <TextView
                            android:id="@+id/viewProductListButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:padding="13dp"
                            android:text="Product"
                            android:textAllCaps="true"
                            android:textColor="@color/md_theme_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!--Bootom Cards with sections-->
                    <LinearLayout
                        android:id="@+id/personalinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--Contact Details-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circular_border_solid"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Contact"
                                    android:textSize="17sp"
                                    android:textColor="@color/md_theme_primary"
                                    android:textStyle="bold" />

                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingRight="8dp" >

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/account_phone_icon"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:background="@drawable/circular_grey_bordersolid"
                                            android:padding="10dp"
                                            android:src="@drawable/ic_call_24dp" />

                                        <TextView
                                            android:id="@+id/account_phone_number"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:maxLines="1"
                                            android:ellipsize="end"
                                            android:text="861/15/30 Trần Xuân Soạn, Phường Tân Hưng, Quận 7, Thành phố Hồ Chí Minh"
                                            android:textColor="@color/md_theme_primary"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/copy_phone"
                                        android:layout_width="35dp"
                                        android:layout_height="wrap_content"
                                        android:text="Copy"
                                        android:textColor="#FFCF66"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center_vertical"
                                    android:paddingRight="8dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/account_email_icon"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:background="@drawable/circular_grey_bordersolid"
                                            android:padding="10dp"
                                            android:src="@drawable/ic_email_24dp" />

                                        <TextView
                                            android:id="@+id/account_email"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:maxLines="1"
                                            android:ellipsize="end"
                                            android:text="861/15/30 Trần Xuân Soạn, Phường Tân Hưng, Quận 7, Thành phố Hồ Chí Minh"
                                            android:textColor="@color/md_theme_primary"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/copy_email"
                                        android:layout_width="35dp"
                                        android:layout_height="wrap_content"
                                        android:text="Copy"
                                        android:textColor="#FFCF66"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center_vertical"
                                    android:paddingRight="8dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/account_position_icon"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:background="@drawable/circular_grey_bordersolid"
                                            android:padding="10dp"
                                            android:src="@drawable/ic_location_24dp" />

                                        <TextView
                                            android:id="@+id/account_address"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:maxLines="1"
                                            android:ellipsize="end"
                                            android:text="861/15/30 Trần Xuân Soạn, Phường Tân Hưng, Quận 7, Thành phố Hồ Chí Minh"
                                            android:textColor="@color/md_theme_primary"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/copy_address"
                                        android:layout_width="35dp"
                                        android:layout_height="wrap_content"
                                        android:text="Copy"
                                        android:textColor="#FFCF66"
                                        android:textSize="14sp" />
                                </LinearLayout>



                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>