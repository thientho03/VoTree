<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    tools:context=".users.fragments.PasswordVerificationFragment">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textColor="@color/md_theme_primary"
        android:textSize="32sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:helperText="Minimum 8 characters, includes at least 1 uppercase letter and 1 special character"
        app:boxStrokeColor="@color/md_theme_primary"
        app:boxBackgroundColor="@color/md_theme_surfaceContainer_highContrast"
        app:boxStrokeWidth="2dp"
        app:endIconMode="clear_text"
        app:endIconTint="@color/md_theme_primary"
        app:hintTextColor="@color/md_theme_primary">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/md_theme_primary"
            android:textColorHint="@color/md_theme_primary"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordConfirm_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:hint="Password Confirm"
        android:inputType="textPassword"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/md_theme_primary"
        app:boxBackgroundColor="@color/md_theme_surfaceContainer_highContrast"
        app:boxStrokeWidth="2dp"
        app:endIconMode="clear_text"
        app:endIconTint="@color/md_theme_primary"
        app:hintTextColor="@color/md_theme_primary">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordConfirm_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/md_theme_primary"
            android:textColorHint="@color/md_theme_primary"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/verifyOtp_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Verify OTP"
        android:textColor="@color/md_theme_onPrimary"
        android:backgroundTint="@color/md_theme_primary_opacity_12"
        android:textSize="14sp"
        />
</LinearLayout>