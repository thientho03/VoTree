<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000"/> <!-- Shadow color -->
            <corners android:radius="8dp"/> <!-- Match corner radius with the card -->
        </shape>
    </item>
    <!-- Background with stroke -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_surface"/> <!-- Background color -->
            <stroke android:width="0.5dp" android:color="@color/md_theme_outlineVariant"/> <!-- Stroke color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>